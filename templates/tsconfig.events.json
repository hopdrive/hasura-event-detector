{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": ".",
    "rootDir": "."
  },
  "include": ["events/**/*.ts"],
  "exclude": [
    "events/**/*.generated.js",
    "events/**/*.generated.d.ts",
    "node_modules"
  ]
}
