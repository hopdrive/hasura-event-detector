# Observability Dashboard Configuration
# Copy this file to .env and update the values for your environment

# GraphQL Configuration
REACT_APP_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql
REACT_APP_GRAPHQL_WS_ENDPOINT=ws://localhost:8080/v1/graphql
REACT_APP_HASURA_ADMIN_SECRET=your-hasura-admin-secret

# Alternative: Use JWT tokens instead of admin secret
# REACT_APP_JWT_TOKEN=your-jwt-token

# Database Schema Configuration
REACT_APP_OBSERVABILITY_SCHEMA=event_detector_observability

# Polling and Real-time Settings
REACT_APP_OVERVIEW_POLLING=30000
REACT_APP_REALTIME_POLLING=5000
REACT_APP_ANALYTICS_POLLING=60000
REACT_APP_ENABLE_SUBSCRIPTIONS=false

# Display Settings
REACT_APP_INVOCATIONS_PER_PAGE=20
REACT_APP_CORRELATION_CHAINS_LIMIT=50
REACT_APP_DEFAULT_TIME_RANGE=24
REACT_APP_MAX_FLOW_NODES=100

# Feature Flags
REACT_APP_SHOW_CORRELATION_CHAINS=true
REACT_APP_SHOW_EXECUTION_FLOWS=true
REACT_APP_SHOW_ANALYTICS=true
REACT_APP_SHOW_REALTIME=true
REACT_APP_ENABLE_SEARCH=true
REACT_APP_SHOW_RAW_PAYLOADS=false

# Theme Configuration
REACT_APP_PRIMARY_COLOR=#1890ff
REACT_APP_SUCCESS_COLOR=#52c41a
REACT_APP_ERROR_COLOR=#ff4d4f
REACT_APP_WARNING_COLOR=#faad14
REACT_APP_ANIMATION_DURATION=1000

# Error Handling
REACT_APP_ENABLE_RETRY=true
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000

# Development Settings
REACT_APP_DEBUG=false
REACT_APP_USE_MOCK_DATA=false
REACT_APP_SHOW_QUERY_METRICS=false