{
  "name": "@hopdrive/hasura-event-detector",
  "version": "2.3.1-rc027",
  "description": "Detect events by name by interogating Hasura Event Trigger Payloads using a modular approach.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/esm/plugins/index.js",
      "require": "./dist/cjs/plugins/index.js",
      "types": "./dist/types/plugins/index.d.ts"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js",
      "types": "./dist/types/utils/index.d.ts"
    },
    "./netlify": {
      "import": "./dist/esm/netlify/index.js",
      "require": "./dist/cjs/netlify/index.js",
      "types": "./dist/types/netlify/index.d.ts"
    }
  },
  "bin": {
    "hasura-event-detector": "./bin/hasura-event-detector"
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:strict": "node scripts/build.js",
    "dev": "tsx watch src/index.ts",
    "watch": "nodemon --watch src --ext ts --exec 'npm run build'",
    "prepare": "npm run build",
    "build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/.*\\.test\\.ts$ --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --coverage",
    "test:e2e": "jest --testPathPattern=tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:types": "tsc --noEmit",
    "test:coverage": "jest --coverage --coverageReporters=text lcov html",
    "test:coverage:check": "jest --coverage --passWithNoTests --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "quality:check": "node scripts/quality-gates.js",
    "quality:check:fast": "node scripts/quality-gates.js --fail-fast",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "deploy": "node scripts/deploy-wrapper.js",
    "deploy-force": "node scripts/modified-deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hopdrive/hasura-event-detector.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hopdrive/hasura-event-detector/issues"
  },
  "homepage": "https://github.com/hopdrive/hasura-event-detector#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0"
  },
  "publishConfig": {
    "cache": "~/.npm",
    "registry": "https://npm.pkg.github.com/hopdrive"
  },
  "devDependencies": {
    "@hopdrive/package-deploy-scripts": "0.0.4",
    "@jest/globals": "^30.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
